<div class="js-toggle-menu-submenu box-dropdown__options js-domains-select">
    {{ form_start(form, {'action': path('admin_domains_filter'), 'method': 'POST'}) }}
    <ul class="domain-filter__list">
        {% for child in form.domains %}
            <li class="box-dropdown__options__item">
                <div class="form-choice form-choice--inline-checkbox">
                    {{ form_widget(child, { inFormChoice: true }) }}
                    {{ form_label(child) }}
                    {{ form_errors(child) }}
                </div>
            </li>
        {% endfor %}
    </ul>
    <div class="domain-filter__buttons">
        <label class="checkbox">
            <input type="checkbox" class="checkbox__input js-domains-select-all-checkbox">
            <span class="checkbox__checkmark"></span>
            <span class="checkbox__label">{{ 'All'|trans }}</span>
        </label>
        {{ form_widget(form.apply) }}
    </div>
    {{ form_end(form) }}
</div>
