{% extends '@ShopsysFramework/Admin/Content/Mail/detail.html.twig' %}

{% block title %}- {{ 'Editing email template'|trans }} - {{ mailTemplateName }}{% endblock %}
{% block h1 %}{{ 'Editing email template'|trans }} - {{ mailTemplateName }}{% endblock %}
{% block btn %}
    {% if mailSenderExists %}
        <div class="wrap-bar">
            <a href="#" class="js-mail-template-open-send-window btn wrap-bar__btn" data-url="{{ url('admin_mail_send', { mailTemplateId: entity.id }) }}">
                {{ icon('letter') }}
                {{ 'Send test mail'|trans }}
            </a>
        </div>
    {% endif %}
{% endblock %}
